    <sql>CREATE OR REPLACE TRIGGER review_after_insert
AFTER INSERT ON reviews
FOR EACH ROW
EXECUTE FUNCTION update_average_review_score();

CREATE TABLE IF NOT EXISTS coupons (
     id            SERIAL PRIMARY KEY,
     code          VARCHAR(10) UNIQUE NOT NULL,
     userid        INT,
     active        BOOLEAN DEFAULT 't',
     applied_value INT NOT NULL DEFAULT 10,
     is_absolute   BOOLEAN NOT NULL DEFAULT 'f',
     CONSTRAINT fk_accounts_user_id FOREIGN KEY(userid) REFERENCES accounts(user_id)
);
</sql>
