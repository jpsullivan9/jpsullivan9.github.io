    <sql>CREATE TABLE IF NOT EXISTS categories ( 
     id            SERIAL PRIMARY KEY,
     name          VARCHAR(20) NOT NULL,
     description   VARCHAR(2000),
     image_url     VARCHAR(500),
     created_at    TIMESTAMP DEFAULT NOW()
);

CREATE TABLE IF NOT EXISTS subcategories ( 
     id            SERIAL PRIMARY KEY,
     name          VARCHAR(20) NOT NULL,
     description   VARCHAR(2000),
     image_url     VARCHAR(500),
     created_at    TIMESTAMP DEFAULT NOW(),
     category_id   INT,
     CONSTRAINT    subcategories_category_id_fkey FOREIGN KEY (category_id) REFERENCES categories (id)
);

CREATE TABLE IF NOT EXISTS products (
     id                    SERIAL PRIMARY KEY,
     name                  VARCHAR(255) NOT NULL,
     description           TEXT,
     price                 NUMERIC(10,2) NOT NULL,
     image_url             VARCHAR(600)[],
     featured              BOOLEAN DEFAULT 'f',
     stock_quantity        INT DEFAULT 0,
     subcategories         INT[],
     average_review_score  NUMERIC(3,2),
     review_count          INT DEFAULT 0,
     seller_id             INT
);

CREATE TABLE IF NOT EXISTS accounts (
     user_id                  SERIAL NOT NULL,
     username                 VARCHAR(255) NOT NULL,
     email                    VARCHAR(255) NOT NULL,
     password_hash            VARCHAR(255) NOT NULL,
     created_at               TIMESTAMPTZ DEFAULT CURRENT_TIMESTAMP,
     last_login               TIMESTAMPTZ,
     is_seller                BOOLEAN DEFAULT 'f',
     wishlist                 TEXT,
     shipping_address         TEXT,
     phone_number             VARCHAR(20),
     zip_code                 VARCHAR(20),
     is_2fa                   BOOLEAN DEFAULT false NULL,
     temp_secret              TEXT,
     secret                   TEXT,
     CONSTRAINT accounts_email_key UNIQUE (email),
     CONSTRAINT accounts_pkey PRIMARY KEY (user_id),
     CONSTRAINT accounts_username_key UNIQUE (username)
);

CREATE TABLE IF NOT EXISTS reviews (
     review_id             SERIAL PRIMARY KEY,
     product_id            INT NOT NULL,
     user_id               INT NOT NULL,
     star_rating           INT NOT NULL,
     review_text           TEXT,
     review_time           TIMESTAMPTZ DEFAULT CURRENT_TIMESTAMP,
     CONSTRAINT reviews_star_rating_check CHECK (star_rating >= 1 AND star_rating &lt;= 5),
     CONSTRAINT reviews_product_id_fkey FOREIGN KEY (product_id) REFERENCES products(id),
     CONSTRAINT reviews_user_id_fkey FOREIGN KEY (user_id) REFERENCES accounts(user_id)
);

</sql>
