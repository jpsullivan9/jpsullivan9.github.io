    <sql>CREATE OR REPLACE FUNCTION update_average_review_score()
RETURNS TRIGGER
LANGUAGE plpgsql
AS $function$
     BEGIN
        UPDATE products
        SET average_review_score = (
           SELECT AVG(star_rating) FROM reviews WHERE product_id = NEW.product_id
        ),
        review_count = (
           SELECT COUNT(*) FROM reviews WHERE product_id = NEW.product_id
        )
        WHERE id = NEW.product_id;

        RETURN NEW;
     END;
$function$;

</sql>
